}
.sku {
  margin-left: 100rpx;
  position: absolute;
  right: 30rpx;
  /* margin-top: 15rpx;  */
}
.sku-price {
  color: #92B6D5;
  font-weight: 600rpx;
  position: relative;
  margin-top: 11rpx; 
}
.price {
  color: #92B6D5;
  position: relative;
  font-weight: 600rpx;
}
.title {
  font-size: 35rpx;
  margin-top: 23rpx;
  color: rgb(43, 98, 146);
  font-weight: 500;
}
.subtitle {
  font-size: 23rpx;
  margin-top: 3rpx;
  color: rgb(184, 194, 204);
  overflow: hidden; 
  text-overflow: ellipsis;
  white-space: nowrap;
}
.subtitle2 {
  font-size: 23rpx;
  font-weight: 400;
  margin-top: 3rpx;
