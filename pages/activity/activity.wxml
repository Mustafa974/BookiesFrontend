<!-- TopSection of activity -->

<view class="TopSection">
  <van-row>
    <van-col span="12">
      <van-row custom-class="TopSection_Seclect">
        <text bindtap='onClick01'>{{selectOrder}} </text>
      </van-row>
    </van-col>
    <van-col span="12">
      <van-row custom-class="TopSection_Seclect">
        <text bindtap='onClick02'>{{selectChoise}} </text>
      </van-row>
    </van-col>
  </van-row>
</view>

<!-- select01 -->
<van-popup show="{{ show01 }}" bind:close="onCancel0102" position="bottom" duration="220">
  <van-picker show-toolbar title="选择排序方式" columns="{{ columns01 }}" item-height="50" bind:cancel="onCancel0102" bind:confirm="onConfirm01" />
</van-popup>

<!-- select02 -->
<van-popup show="{{ show02 }}" bind:close="onCancel0102" position="bottom" duration="220">
  <van-picker show-toolbar title="做这项运动" columns="{{ columns02 }}" item-height="50" bind:cancel="onCancel0102" bind:confirm="onConfirm02" bind:change="onChange" />
</van-popup>


<!-- CardSection of activity -->
<view class='activityCardShadowBottom'></view>

<view class='activityCardSection'>
  <view class='activityCardContainer'>
    <block wx:for="{{ cardInfo }}" wx:for-item="i" wx:key="">
      <template is="activityCard0" data="{{i}}" />
    </block>
  </view>
  <wux-fab-button position="bottomRight" theme="dark" backdrop="true" direction="vertical" buttons="{{ buttons }}" bind:click="onClick" />
</view>