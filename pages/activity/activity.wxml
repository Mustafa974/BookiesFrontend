<!--pages/activities/activity.wxml-->

<!-- Temlpate 未开始-->
<template name="activityCard0">
  <view class="activityCardOutline" style='border-right: 15rpx solid #5FC48D;' data-groupid="{{i.groupID}}" bindtap='toPage'>
    <van-col span="21">
      <van-row>
        <van-col span="5">
          <image class="activityCardImg" src="{{i.avatar}}" mode='aspectFit'></image>
        </van-col>
        <van-col custom-class="activityCardH1" span="16">
          <view>
            <text class='inLine'>{{i.title}} </text>
            <van-toast id="van-toast" />
            <van-icon wx:if="{{i.collected == true}}" name="star" custom-class='collected' color="#FFD700" />
          </view>
          <view class='activityCardSubH1'>{{ i.date }}
            <text style="color:#5FC48D;font-weight: 600; font-size:28rpx;">未开始</text>
          </view>
        </van-col>
      </van-row>
      <van-row custom-class="activityCardSubH1">
        <text>{{i.campus}}{{i.venue}} | {{i.sport}}</text>
      </van-row>
    </van-col>
    <van-col span="3">
      <van-row custom-class="activityCardH2">
        <text>{{i.startTime}}</text>
      </van-row>
      <van-row>
        <view class="activitySubCardH21">
          <text>{{i.numOfMember}}</text>
          <text class="activitySubCardH22">/{{i.numOfPeople}}</text>
        </view>
      </van-row>
    </van-col>
  </view>
</template>

