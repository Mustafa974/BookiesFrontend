/* pages/activities/activity.wxss */

/* TopSection starts*/

.TopSection {
  width: 750rpx;
  background-image: linear-gradient(to Top, #615B67,#564F5E, #564F5E);
  box-shadow: 0 0 24rpx #bdbdbd;
  padding: 10rpx;
  position: fixed;
  top: 0;
  z-index: 88;
}

.TopSection_Seclect {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  text-align: center;
  padding: 10rpx;
  z-index: 88;
}

/* TopSection Ends */

/* ActivityCardSection Starts */

.activityCardSection {
  background-color: #efefef;
  /* fixed padding */
  padding-top: 80rpx;
}

.activityCardShadowBottom {
  box-shadow: 0 0 60rpx #bdbdbd;
  width: 750rpx;
  height: 1rpx;
  position: fixed;
  bottom: -1rpx;
}

.activityCardContainer {
  background-color: #efefef;
  padding: 20rpx;
  min-height: 1000rpx;
}

.activityCardOutline {
  background-color: #fff;
  padding: 30rpx 45rpx 30rpx 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  height: 150rpx;
}

.activityCardImg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.activityCardH1 {
  font-size: 34rpx;
  font-weight: 600;
  padding: 0;
}

.activityCardSubH1 {
  font-size: 28rpx;
  font-weight: 400;
  color: #929292;
  padding: 10rpx 0 0 0;
}

.activityCardH2 {
  font-size: 34rpx;
  font-weight: 400;
  line-height: 1;
  padding: 18rpx 0;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: flex-end;
}

.activitySubCardH21 {
  font-size: 45rpx;
  font-weight: 600;
  /* line-height: 1; */
  display: flex;
  justify-content: flex-end;
}

.activitySubCardH22 {
  font-size: 40rpx;
  font-weight: 400;
  /* padding-left: 5rpx; */
  /* background-color: #333333; */
}

.inLine {
  display: inline;
}


/* ActivityCardSection Ends */


