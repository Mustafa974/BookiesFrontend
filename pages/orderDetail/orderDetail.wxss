/* pages/orderDetail/orderDetail.wxss */
@import '../../template/quantity/quantity.wxss';

/* page Section start */
page{  
  background: #f5f5f5; 
  padding-bottom: 120rpx; 
}
.small_price {
  color: rgb(112, 149, 180);
  font-size: 30rpx;
  position: relative;
  font-weight: 600rpx;
}
.small_text {
  font-size: 25rpx;
  margin-right: 15rpx;
  margin-left: 15rpx;
}
/* Page Section end */

/* Body Section start */
.order_container {
  width: 100%;
  min-height: 300rpx;
  background-color: #FFFFFF;
  margin-top: 17rpx;
  border-radius: 14rpx;
}
.book_container {
  width: 94%;
  min-height: 200rpx;
  margin-top: 15rpx;
  margin-left: 2.9%;
  border-radius: 10rpx;
  background-color: rgb(248, 253, 255);
  border: 0.3rpx solid rgb(220, 238, 243);
}
.bt_container {
  width: 94%;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.column {
  display: flex;
  flex-direction: column;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row02 {
  display: flex;
  flex-direction: row;
}
.inner-left {
  padding-left: 25rpx;
  flex: 1;
}
.inner-right {
  padding-right: 20rpx;
}
.text01 {
  font-size: 29rpx;
  font-weight: 320;
  color: rgb(112, 149, 180);
  margin-right: 10rpx;
  margin-top: 8rpx;
}
.text02 {
  font-size: 24rpx;
  font-weight: 290;
  color: rgb(53, 53, 53);
  margin-right: 10rpx;
  margin-top: 8rpx;
  overflow: hidden; 
  text-overflow: ellipsis;
  white-space: nowrap;
}
.text03 {
  font-size: 22rpx;
  font-weight: 240;
  color: #5a5a5a;
}
.bookTitle {
  font-size: 30rpx;
  margin-top: 22rpx;
  margin-bottom: 7rpx;
  color: rgb(43, 98, 146);
  font-weight: 500;
}
.bookImg {
  width: 150rpx;
  height: 180rpx;
  margin: 15rpx;
}
.icon {
  width: 35rpx;
  height: 29rpx;
  margin-right: 9rpx;
}
.status0 {
  background-color: rgb(255, 243, 217);
  border: 0.3rpx solid rgb(255, 240, 190);
  color: rgb(231, 189, 71);
}
.status1 {
  background-color: rgb(248, 253, 255);
  border: 0.3rpx solid rgb(220, 238, 243);
  color: #92B6D5;
}
.status2 {
  background-color: rgb(237, 250, 234);
  border: 0.3rpx solid rgb(203, 236, 200);
  color: rgb(117, 173, 106);
}
.statusBt {
  width: 150rpx;
  height: 60rpx;
  margin-left: 500rpx;
  border-radius: 12rpx;
  font-size: 29rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* Body Section end */


/* Bottom Section start */
 .bottom_line {
  width: 100%;
  height: 2rpx;
  background: #f5f5f5; 
} 
.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: white;
  border-top: 1rpx solid #f5f5f5; 
}
.button {
  background-color: #92B6D5; 
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 24%;
  height: 100rpx;
  line-height: 100rpx;
}

/* Bottom Section end */