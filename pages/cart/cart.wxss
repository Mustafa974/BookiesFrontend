/* pages/cart/cart.wxss */
@import '../../template/quantity/quantity.wxss';

/* page start */
page{  
  background: #f5f5f5; 
  padding-bottom: 120rpx; 
}  

/* cart section start */
.scroll {
   /* margin-bottom: 120rpx;  */
   min-height: 1000rpx;
}
.forClass {
  position: relative;
  width: 100%;
}
.cart_container {
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  top: 0rpx;
  background-color: #FFFFFF;
  margin-bottom: 10rpx;
  transition: left 0.2s ease-in-out;
  white-space:nowrap;
}
.delButton {
  width: 150rpx;  
  height: 220rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center; 
  position: absolute;  
  top: 0;  
  right: -150rpx;  
  background-color: rgb(80, 119, 153); 
  color: white;
  font-size: 32rpx;
}
.column {
  display: flex;
  flex-direction: column;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* margin-top: 20rpx;  */
}
.sku {
  margin-left: 100rpx;
  position: absolute;
  right: 30rpx;
  /* margin-top: 15rpx;  */
}
.sku-price {
  color: #92B6D5;
  font-weight: 600rpx;
  position: relative;
  margin-top: 11rpx; 
}
.price {
  color: #92B6D5;
  position: relative;
  font-weight: 600rpx;
}
.small_price {
  color: #92B6D5;
  font-size: 30rpx;
  position: relative;
  font-weight: 600rpx;
}
.title {
  font-size: 35rpx;
  margin-top: 23rpx;
  color: rgb(43, 98, 146);
  font-weight: 500;
}
.subtitle {
  font-size: 23rpx;
  margin-top: 3rpx;
  color: rgb(147, 160, 173);
  overflow: hidden; 
  text-overflow: ellipsis;
  white-space: nowrap;
}
.subtitle2 {
  font-size: 23rpx;
  font-weight: 400;
  margin-top: 3rpx;
  margin-left: 4rpx;
  margin-right: 4rpx;
  color: rgb(120, 153, 182);
}
.small_text {
  font-size: 25rpx;
  margin-right: 15rpx;
  margin-left: 15rpx;
}
.item-select {
  width: 40rpx;
  height: 40rpx;
  margin-top: 90rpx;
  margin-left: 20rpx;
}
.item-allselect {
  width: 40rpx;
  height: 40rpx; 
  margin-left: 20rpx;
  margin-top:25rpx;   
}
.item-image {
  width: 155rpx;
  height: 180rpx;
  margin: 20rpx;
}
.image-close {
  margin-left: 300rpx;
  margin-right: 6rpx;
}
/* Page Section end */


/* Bottom Section start */
 .bottom_line {
  width: 100%;
  height: 2rpx;
  background: #f5f5f5; 
} 
.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: white;
  border-top: 1rpx solid #f5f5f5; 
}
.button {
  background-color: #92B6D5; 
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 24%;
  height: 100rpx;
  line-height: 100rpx;
}

/* Bottom Section end */